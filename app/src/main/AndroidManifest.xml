<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Required permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.nothing.ketchum.permission.ENABLE"/>
    <uses-permission android:name="com.nothing.glyph.permission.ENABLE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BitcoinGlyph"
        tools:targetApi="31">

        <!-- Nothing Glyph API Key -->
        <!-- For testing: use "test" and enable debug mode with: adb shell settings put global nt_glyph_interface_debug_enable 1 -->
        <!-- For production: get real API key from https://intl.nothing.tech/pages/glyph-developer-kit -->
        <meta-data
            android:name="NothingKey"
            android:value="test" />
        
        <!-- Alternative API key name (some documentation shows this format) -->
        <meta-data
            android:name="com.nothing.glyph.api_key"
            android:value="test" />

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Bitcoin Glyph Toy Service -->
        <service 
            android:name=".BitcoinGlyphToyService"
            android:exported="true"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.nothing.glyph.TOY"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            
            <!-- Additional intent filters for discovery -->
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED"/>
                <action android:name="android.intent.action.PACKAGE_REPLACED"/>
                <data android:scheme="package"/>
            </intent-filter>
            
            <!-- Required: Toy name -->
            <meta-data
                android:name="com.nothing.glyph.toy.name"
                android:resource="@string/glyph_toy_name"/>
            
            <!-- Required: Preview thumbnail -->
            <meta-data
                android:name="com.nothing.glyph.toy.image"
                android:resource="@drawable/bitcoin_preview"/>
            
            <!-- Optional: Description -->
            <meta-data
                android:name="com.nothing.glyph.toy.summary"
                android:resource="@string/glyph_toy_summary"/>
            
            <!-- Enable long press functionality -->
            <meta-data
                android:name="com.nothing.glyph.toy.longpress"
                android:value="1"/>
            
            <!-- Display order in toy list -->
            <meta-data
                android:name="com.nothing.glyph.toy.order"
                android:value="100"/>
            
            <!-- Mark as active/enabled -->
            <meta-data
                android:name="com.nothing.glyph.toy.active"
                android:value="true"/>
        </service>

    </application>

</manifest> 